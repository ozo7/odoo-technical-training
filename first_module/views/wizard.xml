<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="word_creation_wizard_form" model="ir.ui.view">
    <field name='name'>word creation</field>
    <field name='model'>t.mot</field>
    <field name='arch' type='xml'>
    <form string="create word">
    <sheet>
        <group>
        <field name='en' />        
        </group>
        <group>
        <field name='fr' />        
        </group>
        <group>
        <field name='de' />        
        </group>
        <group>
        <field name='mottype' />                
        </group>
    </sheet>
    <footer>
    <button name='saveWord'
        string='save'
        class='btn-primary'
        type='object'/>
    </footer>
    </form>
    </field>
</record>

<record id="v_nouns_x_genders_tree_view" model="ir.ui.view">
    <field name="name">Nouns and their genders</field>
    <field name="model">v.nouns.x.genders</field>
    <field name="arch" type="xml">
        <tree>
            <field name="mot_fr"/>
            <field name="g_fr"/>
            <field name="mot_de"/>
            <field name="g_de"/>                            
        </tree>
    </field>    
</record>
 
<act_window
    id="t_mot_action"
    name="newWord"
    res_model="t.mot"
    view_mode = "form"
    target = "new"
/>

<act_window
    id="v_nouns_x_genders_action"
    name="NounsXGenders"
    res_model="v.nouns.x.genders" 
    view_mode = "tree,form"  
/>

<menuitem
    id="new_word_menu"
    name="new Word"    
    action="t_mot_action"
    parent="vocabulary_menu"
    sequence="8"
/>

<menuitem
    id="nouns_x_genders"
    name="Nouns and their genders"    
    action="v_nouns_x_genders_action"
    parent="vocabulary_menu"
    sequence="9"
/>


</odoo>