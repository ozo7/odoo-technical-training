<odoo>

<record id="mot_de_langue_form_view" model="ir.ui.view">
    <field name="name">Vocabulary Word</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="en"/>
                <field name="fr"/>
                <field name="de"/>
                <field name="mottype_id"/>
                <field name="mottype_base"/>
                <field name="mottype"/>
                <field name="mottype_gender"/>
                <field name="create_uid"/>                           
                <field name="write_date"/>                
            </group>
        </form>
    </field>    
</record>

<record id="mot_de_langue_tree_view" model="ir.ui.view">
    <field name="name">Vocabulary List</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="arch" type="xml">
        <tree>
            <field name="en"/>
            <field name="fr"/>
            <field name="de"/>     
            <field name="mottype_id"/>                    
            <field name="mottype_base"/>
            <field name="mottype"/>
            <field name="mottype_gender"/>
            <field name="write_date"/>                            
        </tree>
    </field>    
</record>

<record id="mot_de_langue_search_view" model="ir.ui.view">
    <field name="name">Vocabulary Search</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="arch" type="xml">
        <search>
            <field name="en"/>
            <field name="fr"/>
            <field name="de"/>                   
        </search>
    </field>    
</record>


<!-- id must contain the file name of the model -->
<act_window
    id="mot_de_langue_action"
    name="Vocabulary"
    res_model="vv.mot.de.langue"
/>

<menuitem
    id="vocabulary_menu"
    name="Vocabulary"
    action="mot_de_langue_action"
    parent=""
    sequence="5"
/>
