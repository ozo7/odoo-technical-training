<odoo>

<!-- ****************************** Views ************************************** -->

<record id="mot_de_langue_form_view" model="ir.ui.view">
    <field name="name">Vocabulary Word</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="en"/>
                <field name="fr"/>
                <field name="de"/>
                <field name="mottype_id"/>              
                <field name="create_uid"/>                           
                <field name="write_date"/>                
            </group>
        </form>
    </field>    
</record>

<record id="noun_form_view" model="ir.ui.view">
    <field name="name">Vocabulary Word</field>
    <field name="model">vv.noun</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="vv_mot_de_langue_id"/>
                <field name="gender_combo"/>                            
            </group>
        </form>
    </field>    
</record>

<!-- Improved, inherited vocabulary view -->
<record id="mot_de_langue_tree_view2" model="ir.ui.view">
    <field name="name">Vocabulary List 2</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="mode">primary</field>
    <field name="priority">9</field>
    <field name="inherit_id" ref="mot_de_langue_tree_view"/>
    <field name="arch" type="xml">
        <!-- add a new field -->
        <xpath expr="//field[@name='mottype_id']" position="after">
          <field name="create_date" string="Created at"/>
        </xpath>
    </field>    
</record>

<record id="mot_de_langue_tree_view" model="ir.ui.view">
    <field name="name">Vocabulary List</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="mode">primary</field>
    <field name="priority">1</field>
    <field name="arch" type="xml">
        <tree>
            <field name="en"/>
            <field name="fr"/>
            <field name="de"/>     
            <field name="mottype_id"/>                                
            <field name="write_date"/>                            
        </tree>
    </field>    
</record>



<record id="noun_tree_view" model="ir.ui.view">
    <field name="name">Nouns List</field>
    <field name="model">vv.noun</field>
    <field name="arch" type="xml">
        <tree>
            <field name="vv_mot_de_langue_id"/>
            <field name="gender_combo"/>                          
        </tree>
    </field>    
</record>

<record id="mot_de_langue_search_view" model="ir.ui.view">
    <field name="name">Vocabulary Search</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="arch" type="xml">
        <search>
            <field name="en"/>
            <field name="fr"/>
            <field name="de"/>                   
        </search>
    </field>    
</record>

<!-- ****************************** Actions ************************************ -->

<!-- id must contain the file name of the model -->
<act_window
    id="mot_de_langue_action"
    name="Vocabulary"
    res_model="vv.mot.de.langue"
/>
<act_window
    id="nouns_action"
    name="Nouns"
    res_model="vv.noun"
/>
<!-- just a simple view with a certain domain defined -->
<act_window id="action_all_adverbs"
    name="All adverbs"
    res_model="vv.mot.de.langue"
    view_mode="list,form"
    domain="[('mottype_id','=',4)]"
/>


<!-- ****************************** Menus ************************************** -->

<menuitem
    id="vocabulary_menu"
    name="Vocabulary"
    action="mot_de_langue_action"
    parent=""
    sequence="5"
/>
<!-- NO-the below does not help - The custom icon is not displayed in the app overview -->
<!-- <menuitem name="menu_name" id="unique_id" web_icon="first_module,static/description/icon.png" sequence="1"/> -->

<menuitem
    id="nouns_menu"
    name="Nouns"
    action="nouns_action"
    parent="vocabulary_menu"
    sequence="6"
/>

<menuitem
    id="menu_test_finally"
    name="Adverbs"
    parent="vocabulary_menu"
    action="action_all_adverbs"
/>


</odoo>