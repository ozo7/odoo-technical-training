<odoo>

<!-- ****************************** Actions ************************************ -->
<act_window id="action_mot_training"
name="bla"
res_model="vv.mot.de.langue"
view_mode="form"
/>


<!-- ****************************** Views ************************************** -->

<record id="form_mot_training" model="ir.ui.view">
    <field name="name">Vocabulary Training Form</field>
    <field name="model">vv.mot.de.langue</field>
    <field name="priority">1</field>
    <field name="arch" type="xml">
        <form string="testing form">
            <header>
                <button type="Object" name="testing_do1_model" string="testing_do1" class="btn-primary" />
                <button type="action" name="testing_do2_action" string="testing_do2" />
                <!-- <field name="state" widget="statusbar" /> -->
            </header>
            <sheet>
            <group>
                <group string="Group content" name="my_group_content">
                    <field name="en" />               
                </group>
                <group string="Group content2" name="my_group_content2">
                    <field name="fr" />
                </group>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="do_something_with_model"
                            string="do something with model" type="object"
                            icon="fa-signal"/>
                    <button class="oe_stat_button" name="do_something_else" type="action"
                            icon="fa-bars"/>
                </div>
            
                <tree>                   
                    <field name="de"/>
                </tree>
                <form>
                    <field name="mottype_id"/>
                </form>
            
            </group>
            </sheet>
        </form>
    </field>
</record>

<record model="ir.actions.act_window.view" id="action_mot_training_form">
    <field name="act_window_id" ref="action_mot_training"/>
    <field name="view_id" ref="form_mot_training"/>
    <!-- Precedence over form defined in act_window -->
    <field name="view_mode">form</field>
    <field name="sequence">10</field>
</record>



<!-- ****************************** Menus ************************************** -->
<menuitem
    id="input_forms_menu"
    name="input forms"
    parent="vocabulary_menu"
    sequence="11"
/>
<menuitem
    id="form_entries_menu"
    name="vocabulary training"
    action="action_mot_training"
    parent="input_forms_menu"
    sequence="1"
/>


</odoo>