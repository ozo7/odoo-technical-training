<odoo>

<!-- ****************************** Actions ************************************ -->
<act_window id="action_mot_training"
name="bla"
res_model="vv.learning.session"
view_mode="form"
/>


<!-- ****************************** Views ************************************** -->

<record id="form_mot_training" model="ir.ui.view">
    <field name="name">Vocabulary Training Form</field>
    <field name="model">vv.learning.session</field>
    <field name="priority">1</field>
    <field name="arch" type="xml">
        <form string="learning session form">
            <sheet>
            <group>
                <field name="learner"/>
                <field name="started"/>
            </group>
            <group>
                <field name="mot1"/>
                <field name="mot2"/>
                <field name="mot3"/>
            </group>
            <group>
                <field name="mot1c"/>
                <field name="mot2c"/>
                <field name="mot3c"/>
            </group>
            <group>
                <field name="mot1ok"/>
                <field name="mot2ok"/>
                <field name="mot3ok"/>
            </group>
            </sheet>
        </form>
    </field>
</record>

<record model="ir.actions.act_window.view" id="action_mot_training_form">
    <field name="act_window_id" ref="action_mot_training"/>
    <field name="view_id" ref="form_mot_training"/>
    <!-- Precedence over form defined in act_window -->
    <field name="view_mode">form</field>
    <field name="sequence">10</field>
</record>



<!-- ****************************** Menus ************************************** -->
<menuitem
    id="input_forms_menu"
    name="input forms"
    parent="vocabulary_menu"
    sequence="11"
/>
<menuitem
    id="form_entries_menu"
    name="vocabulary training"
    action="action_mot_training"
    parent="input_forms_menu"
    sequence="1"
/>


</odoo>