<odoo>

<!-- ****************************** Views ************************************** -->

<record id="mot_type_tree_view" model="ir.ui.view">
    <field name="name">Grammar Types of Words</field>
    <field name="model">vv.mot.type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="mottype"/>
            <field name="explanation"/>                       
        </tree>
    </field>    
</record>
<record id="mot_gender_tree_view" model="ir.ui.view">
    <field name="name">Gender Types of Words</field>
    <field name="model">vv.gender.combo</field>
    <field name="arch" type="xml">
        <tree>
            <field name="combo"/>
            <field name="fr"/>
            <field name="de"/>                       
        </tree>
    </field>    
</record>




<!-- ****************************** Actions ************************************ -->
<!-- id must contain the file name of the model -->
<act_window
    id="mot_de_langue_action"
    name="Vocabulary"
    res_model="vv.mot.de.langue"
/>

<record model="ir.actions.act_window" id="word_grammar_types_action">
    <field name="name">Grammar Types of Words</field>
    <field name="res_model">vv.mot.type</field>
    <field name="view_mode">tree</field>    
</record>
<record model="ir.actions.act_window" id="word_gender_types_action">
    <field name="name">Gender Combos</field>
    <field name="res_model">vv.gender.combo</field>
    <field name="view_mode">tree</field>    
</record>

<!-- ****************************** Menus ************************************** -->
<menuitem
    id="small_menu"
    name="small data information"
    parent="vocabulary_menu"
    sequence="6"
/>
<menuitem
    id="word_grammar_types_menu"
    name="word grammar types"
    action="word_grammar_types_action"
    parent="small_menu"
    sequence="1"
/>
<menuitem
    id="word_gender_types_menu"
    name="word gender types"
    action="word_gender_types_action"
    parent="small_menu"
    sequence="2"
/>

</odoo>